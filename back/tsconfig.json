{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],

      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "inlineSources": true,

      // Set `sourceRoot` to  "/" to strip the build path prefix
      // from generated source code references.
      // This improves issue grouping in Sentry.
      "sourceRoot": "/"
   }
}