{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Specify the libraries to include in the compilation
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "module": "esnext", // Specify the module code generation
    "moduleResolution": "bundler", // Use bundler module resolution
    "resolveJsonModule": true, // Include modules imported with .json extension
    "isolatedModules": true, // Ensure each file can be safely transpiled without relying on other imports
    "jsx": "preserve", // Preserve JSX syntax for further processing
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Use the Next.js plugin
      }
    ],
    "paths": {
      "@/*": ["./src/*"] // Define path aliases
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], // Include specific files and directories
  "exclude": ["node_modules"] // Exclude the node_modules directory
}
